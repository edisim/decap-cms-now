{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "16.x"
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "admin/index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/blog/([^/]+)", "destination": "/blog/$1.md" },
    { "source": "/img/([^/]+)", "destination": "/img/$1.jpg" },
    { "source": "/index.html", "destination": "/index.html" }
  ],
  // "routes": [
  //   { "src": "/api/(.*)", "dest": "/api/$1" },
  //   { "src": "/admin", "dest": "/admin/index.html" },
  //   { "src": "/blog/([^/]+)", "dest": "/blog/$1.md" },
  //   { "src": "/img/([^/]+)", "dest": "/img/$1.jpg" },
  //   { "src": "/index.html", "dest": "/index.html" }
  // ],
  "cleanUrls": true
}
