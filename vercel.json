{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "16.x"
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "admin/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "admin/config.yml",
      "use": "@vercel/static"
    },
    {
      "src": "blog/**/*.md",
      "use": "@vercel/static"
    },
    {
      "src": "img/**/*.jpg",
      "use": "@vercel/static"
    },
    {
      "src": "img/**/*.svg",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/blog/([^/]+)", "destination": "/blog/$1.md" },
    { "source": "/img/([^/]+)", "destination": "/img/$1.jpg" },
    { "source": "/index.html", "destination": "/index.html" }
  ],
  "cleanUrls": true
}
