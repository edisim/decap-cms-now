{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "16.x"
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "config.yml",
      "use": "@vercel/static"
    },
    {
      "src": "blog/**/*.md",
      "use": "@vercel/static"
    },
    {
      "src": "img/**/*.jpg",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/auth", "destination": "/api/auth.ts" },
    { "source": "/api/callback", "destination": "/api/callback.ts" }
  ],
  "cleanUrls": true
}
